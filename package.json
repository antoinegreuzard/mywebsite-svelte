{
  "private": true,
  "license": "UNLICENSED",
  "author": "Antoine Greuzard (fork Ross Hill)",
  "type": "module",
  "scripts": {
    "format": "prettier --write  --plugin prettier-plugin-svelte .",
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "getIcons": "wireit",
    "getPosts": "wireit",
    "getWebp": "wireit",
    "lint": "wireit",
    "lint:ts-svelte": "wireit",
    "lint:styles": "wireit",
    "prepare": "svelte-kit sync",
    "preview": "vite preview --port 3000",
    "upgrade": "ncu -u --reject apca-w3 && npm i",
    "updateNvmrc": "wireit"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "updateNvmrc",
        "getIcons",
        "getWebp"
      ],
      "files": [
        "src",
        "svelte.config.js",
        "vite.config.ts",
        "tsconfig.json",
        "package.json",
        "assets"
      ],
      "output": [
        "build"
      ]
    },
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ],
      "files": [
        "data/posts.json",
        "scripts/getIcons.ts"
      ],
      "output": [
        "data/tagColors.json",
        "assets/tags"
      ]
    },
    "getPosts": {
      "command": "markdown-json -c content/.mdconfig.json",
      "files": [
        "content"
      ],
      "output": [
        "data/posts.json"
      ]
    },
    "getWebp": {
      "command": "node --loader ts-node/esm ./scripts/getWebp.ts",
      "files": [
        "assets/**/*.{png,jpg,jpeg}",
        "scripts/getWebp.ts"
      ],
      "output": [
        "assets/**/*.webp"
      ]
    },
    "updateNvmrc": {
      "command": "node --loader ts-node/esm ./scripts/updateNvmrc.ts",
      "files": [
        "package.json",
        "scripts/updateNvmrc.ts"
      ],
      "output": [
        ".nvmrc"
      ]
    },
    "lint": {
      "dependencies": [
        "lint:ts-svelte",
        "lint:styles"
      ]
    },
    "lint:styles": {
      "command": "stylelint \"**/*.{css,scss,svelte}\" --ignore-path .gitignore",
      "files": [
        "**/*.{css,scss,svelte}",
        ".stylelintrc.json"
      ],
      "output": []
    },
    "lint:ts-svelte": {
      "command": "eslint \"**/*.{js,ts,svelte}\" --ignore-path .gitignore",
      "files": [
        "src/**/*.{js,ts,svelte}",
        "scripts/**/*.{js,ts,svelte}",
        "svelte.config.js",
        "vite.config.ts",
        "tsconfig.json",
        ".eslintrc.json"
      ],
      "output": []
    }
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/eslint-parser": "^7.22.15",
    "@iconify/json": "^2.2.124",
    "@playwright/test": "^1.38.1",
    "@sveltejs/adapter-netlify": "^2.0.8",
    "@sveltejs/kit": "1.25.1",
    "@types/apca-w3": "^0.1.1",
    "@types/chroma-js": "^2.4.1",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.0",
    "@types/imagemin": "^8.0.1",
    "@types/imagemin-webp": "^7.0.1",
    "@types/lodash-es": "^4.17.9",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "apca-w3": "0.1.9",
    "autoprefixer": "^10.4.16",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^2.4.2",
    "cssnano": "^6.0.1",
    "date-fns": "^2.30.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-svelte": "^2.34.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "isbot": "^3.7.0",
    "lodash-es": "^4.17.21",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^16.14.5",
    "sass": "^1.68.0",
    "simple-icons": "^9.16.1",
    "slugify": "^1.6.6",
    "svelte": "4.2.1",
    "svelte-check": "^3.5.2",
    "svelte-meta-tags": "^3.0.4",
    "svelte-preprocess": "^5.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "universal-cookie": "^6.1.1",
    "unplugin-icons": "^0.17.0",
    "vite": "4.4.10",
    "wireit": "^0.14.0",
    "xml-formatter": "^3.5.0"
  },
  "engines": {
    "node": ">= 18.14.0"
  },
  "dependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-svelte": "^2.34.0",
    "postcss-html": "^1.5.0",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0",
    "sugarss": "^4.0.1"
  }
}
