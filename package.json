{
  "private": true,
  "license": "UNLICENSED",
  "author": "Ross Hill <ross@rosshill.ca> (https://rosshill.ca)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "getIcons": "wireit",
    "getPosts": "markdown-json -c content/.mdconfig.json",
    "getWebp": "node --loader ts-node/esm ./scripts/getWebp.ts",
    "lint": "eslint . --ignore-path .gitignore",
    "preview": "vite preview --port 3000",
    "deleteTestBuild": "rm -rf tests/build",
    "deleteTestResults": "rm -rf tests/test-results",
    "compileTestTypescript": "tsc --incremental -p tests/tsconfig.json",
    "test": "wireit",
    "upgrade": "ncu -u --reject apca-w3 && npm i",
    "writeNodeVersion": "node --loader ts-node/esm ./scripts/writeNodeVersion.ts"
  },
  "wireit": {
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ]
    },
    "build": {
      "command": "vite build",
      "dependencies": [
        "writeNodeVersion",
        "getIcons",
        "getWebp"
      ]
    },
    "test": {
      "command": "cd tests && playwright test",
      "dependencies": [
        "deleteTestBuild",
        "deleteTestResults",
        "compileTestTypescript"
      ]
    }
  },
  "browserslist": "last 5 years or ie>=11 or >0.2%",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/eslint-parser": "^7.19.1",
    "@iconify/json": "^2.1.153",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-netlify": "^1.0.0",
    "@sveltejs/kit": "1.0.1",
    "@types/apca-w3": "^0.1.0",
    "@types/chroma-js": "^2.1.4",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.0",
    "@types/imagemin": "^8.0.0",
    "@types/imagemin-webp": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "apca-w3": "0.1.2",
    "autoprefixer": "^10.4.13",
    "chroma-js": "^2.4.2",
    "cssnano": "^5.1.14",
    "date-fns": "^2.29.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "isbot": "^3.6.5",
    "markdown-json": "^1.6.1",
    "sass": "^1.56.2",
    "simple-icons": "^8.1.0",
    "slugify": "^1.6.5",
    "svelte": "3.55.0",
    "svelte-check": "^2.10.2",
    "svelte-meta-tags": "^2.6.4",
    "svelte-preprocess": "^5.0.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "universal-cookie": "^4.0.4",
    "unplugin-icons": "^0.14.15",
    "vite": "4.0.1",
    "wireit": "^0.9.2"
  },
  "engines": {
    "node": ">= 16.13.2"
  }
}
