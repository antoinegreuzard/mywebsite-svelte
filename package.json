{
  "private": true,
  "license": "UNLICENSED",
  "author": "Antoine Greuzard (fork Ross Hill)",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:test": "APP_ENV=test npm run build",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "dev": "vite dev --port 3000",
    "getIcons": "wireit",
    "getPosts": "wireit",
    "getWebp": "wireit",
    "lint": "eslint . --ignore-path .gitignore",
    "preview": "vite preview --port 3000",
    "upgrade": "ncu -u --reject apca-w3 && npm i",
    "updateNvmrc": "wireit"
  },
  "wireit": {
    "build": {
      "command": "vite build",
      "dependencies": [
        "updateNvmrc",
        "getIcons",
        "getWebp"
      ],
      "files": [
        "src",
        "svelte.config.js",
        "vite.config.ts",
        "tsconfig.json"
      ],
      "output": [
        "build"
      ]
    },
    "getIcons": {
      "command": "node --loader ts-node/esm ./scripts/getIcons.ts",
      "dependencies": [
        "getPosts"
      ],
      "files": [
        "src/data/posts.json"
      ],
      "output": [
        "src/data/brandColors.json",
        "assets/tags"
      ]
    },
    "getPosts": {
      "command": "markdown-json -c content/.mdconfig.json",
      "files": [
        "content"
      ],
      "output": [
        "src/data/posts.json"
      ]
    },
    "getWebp": {
      "command": "node --loader ts-node/esm ./scripts/getWebp.ts",
      "files": [
        "assets/**/*.{png,jpg,jpeg}"
      ],
      "output": [
        "assets/**/*.webp"
      ]
    },
    "updateNvmrc": {
      "command": "node --loader ts-node/esm ./scripts/updateNvmrc.ts",
      "files": [
        "package.json"
      ],
      "output": [
        ".nvmrc"
      ]
    }
  },
  "browserslist": [
    "defaults and supports es6-module",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/eslint-parser": "^7.22.7",
    "@iconify/json": "^2.2.87",
    "@playwright/test": "^1.35.1",
    "@sveltejs/adapter-netlify": "^2.0.7",
    "@sveltejs/kit": "1.22.1",
    "@types/apca-w3": "^0.1.0",
    "@types/chroma-js": "^2.4.0",
    "@types/cssnano": "^5.0.0",
    "@types/dateformat": "^5.0.0",
    "@types/imagemin": "^8.0.1",
    "@types/imagemin-webp": "^7.0.0",
    "@types/lodash-es": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "apca-w3": "0.1.9",
    "autoprefixer": "^10.4.14",
    "bezier-easing": "^2.1.0",
    "chroma-js": "^2.4.2",
    "cssnano": "^6.0.1",
    "date-fns": "^2.30.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "hsluv-sass": "^2.0.1",
    "hsluv-ts": "^1.0.1",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "isbot": "^3.6.10",
    "lodash-es": "^4.17.21",
    "logrocket": "^4.0.3",
    "markdown-json": "^1.6.1",
    "npm-check-updates": "^16.10.13",
    "sass": "^1.63.6",
    "simple-icons": "^9.4.0",
    "slugify": "^1.6.6",
    "svelte": "3.59.2",
    "svelte-check": "^3.4.5",
    "svelte-meta-tags": "^2.8.0",
    "svelte-preprocess": "^5.0.4",
    "svelte-wrap-balancer": "^0.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "universal-cookie": "^4.0.4",
    "unplugin-icons": "^0.16.3",
    "vite": "4.4.2",
    "wireit": "^0.9.5",
    "xml-formatter": "^3.4.1"
  },
  "engines": {
    "node": ">= 18.14.0"
  }
}
